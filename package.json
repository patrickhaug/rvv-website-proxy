{
  "name": "rcm-corporate",
  "private": true,
  "description": "RCM corporate website frontend",
  "version": "1.3.0",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "npm run compile:node-services && gatsby develop",
    "compile:node-services": "tsc --project node-services/",
    "build": "npm run compile:node-services && gatsby build --log-pages --write-to-file",
    "deploy": "gatsby-plugin-s3 deploy",
    "serve": "gatsby serve",
    "serve:build": "serve -l 8000 ./public/",
    "clean": "gatsby clean",
    "lint": "npm run lint:code",
    "lint:fix": "npm run lint:code:fix",
    "lint:code": "eslint \"./src/**/*.ts\" \"./src/**/*.tsx\" \"./*.js\"",
    "lint:code:fix": "eslint \"./src/**/*.ts\" \"./src/**/*.tsx\" \"./*.js\" --fix",
    "release": "semantic-release"
  },
  "dependencies": {
    "@types/react-helmet": "^6.1.2",
    "@virtualidentityag/rcm-component-library": "^1.9.0",
    "gatsby": "^2.32.13",
    "gatsby-image": "^3.11.0",
    "gatsby-plugin-manifest": "^2.4.23",
    "gatsby-plugin-offline": "^3.2.23",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-plugin-react-helmet-canonical-urls": "^1.4.0",
    "gatsby-plugin-s3": "^0.3.8",
    "gatsby-plugin-sharp": "^2.14.4",
    "gatsby-plugin-sitemap": "^2.6.0",
    "gatsby-plugin-stencil": "git+https://github.com/virtualidentityag/gatsby-plugin-stencil.git",
    "gatsby-source-filesystem": "^2.3.24",
    "gatsby-source-graphql": "^2.10.0",
    "gatsby-transformer-sharp": "^2.5.13",
    "lodash.get": "^4.4.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "serve": "^12.0.0",
    "storyblok-js-client": "^4.1.4",
    "storyblok-react": "^0.1.1",
    "typescript": "^3.9.10"
  },
  "devDependencies": {
    "@biotope/quality-gate": "^2.0.0-rc.5",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^11.1.2",
    "semantic-release": "17.4.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "feat*",
              "release": "minor"
            },
            {
              "type": "fix*",
              "release": "patch"
            },
            {
              "type": "perf*",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
