{
  "name": "roche-website-starter",
  "private": true,
  "description": "A boilerplate project for Roche websites",
  "version": "0.0.1",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "npm run compile:node-services && gatsby develop",
    "compile:node-services": "tsc --project node-services/",
    "build": "npm run compile:node-services && gatsby build --log-pages --write-to-file",
    "build:public": "npm run compile:node-services && PUBLIC_BUILD=1 gatsby build --log-pages --write-to-file",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "lint": "npm run lint:code",
    "lint:fix": "npm run lint:code:fix",
    "lint:code": "eslint \"./src/**/*.ts\" \"./src/**/*.tsx\" \"./*.js\"",
    "lint:code:fix": "eslint \"./src/**/*.ts\" \"./src/**/*.tsx\" \"./*.js\" --fix"
  },
  "dependencies": {
    "@rocheglobal/component-library": "0.0.10",
    "@types/react-helmet": "^6.1.0",
    "gatsby": "^2.24.73",
    "gatsby-image": "^2.4.16",
    "gatsby-plugin-manifest": "^2.4.23",
    "gatsby-plugin-offline": "^3.2.23",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-plugin-sharp": "^2.6.27",
    "gatsby-plugin-sitemap": "^2.6.0",
    "gatsby-plugin-stencil": "git+https://github.com/virtualidentityag/gatsby-plugin-stencil.git",
    "gatsby-source-filesystem": "^2.3.24",
    "gatsby-source-storyblok": "^1.1.0",
    "gatsby-transformer-sharp": "^2.5.13",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "storyblok-js-client": "^2.5.2",
    "storyblok-react": "^0.1.1",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@biotope/quality-gate": "^2.0.0-rc.4",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
